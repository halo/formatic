#!/usr/bin/env sh

sass \
  --fatal-deprecation $(sass --version) \
  --color \
  --watch \
  --load-path ./node_modules/iglu \
  --load-path ./node_modules/filepond/dist \
  --load-path app/assets/stylesheets \
  app/assets/stylesheets/formatic.sass:app/assets/stylesheets/formatic/formatic.css \
  app/assets/stylesheets/vendor.sass:app/assets/stylesheets/formatic/vendor.css
